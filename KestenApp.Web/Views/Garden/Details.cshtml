        <a asp-controller="Garden"
           asp-action="Restore"
           asp-route-id="@Model.GardenId"
           hidden="@Model.HideRestoreButton"
           class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
            </svg>
            <span>Restore</span>
        </a>
    </div>

    <div class="col-2 col-lg-1">
        <div class="row no-gutters">
            <a asp-controller="Garden"
               asp-action="List"
               class="btn mr-1 btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"></path>
                </svg>
                <span>Back</span>
            </a>
        </div>

    </div>
</div>



<hr />

<div class="row mt-1">
    <partial name="_SectionTitle" model='"Varieties"' />

    @if (Model.GardenVarieties.Any())
    {
        <div class="col-xs-12 col-lg-10 offset-lg-1">
            <hr class="mb-0" style="color: black; background-color:black; opacity: 1;" />
            <table class="table">
                @*Titles*@
                <thead>
                    <tr>
                        <th scope="col" class="table-light">
                            Name
                        </th>

                        @foreach (int? year in Model.GardenYears)
                        {
                            <th scope="col" class="table-light">
                                @(year == null ? "Unknown" : year.ToString() )
                            </th>
                        }

                        <th scope="col" class="table-light">
                            Total
                        </th>
                    </tr>
                </thead>

                @*Varieties*@
                @foreach (string varietyName in Model.GardenVarieties)
                {
                    <tr>
                        <th scope="row">
                            @(string.IsNullOrEmpty(varietyName) ? "Unknown" : varietyName)
                        </th>

                        @foreach (int? year in Model.GardenYears)
                        {
                            <td scope="row">
                                @Model.YearVarieties.FirstOrDefault(s => s.Year == year && s.VarietyName == varietyName)?.Count
                            </td>
                        }

                        <th scope="row">
                            @Model.YearVarieties.FirstOrDefault(s => s.VarietyName == varietyName)?.Count
                        </th>
                    </tr>
                }

                @*Totals*@
                <tr>
                    <th scope="row" class="table-light">
                        Total
                    </th>

                    @foreach (int? year in Model.GardenYears)
                    {
                        <th scope="row" class="table-light">
                            @Model.YearVarieties.FirstOrDefault(s => s.Year == year)?.Count
                        </th>
                    }

                    <th scope="row" class="table-light">
                        @Model.YearVarieties.Select(x => x.Count).Sum()
                    </th>
                </tr>

            </table>
        </div>
    }
    else
    {
        <div class="col-xs-12 col-lg-10 offset-lg-1 mt-3">
            This garden is still empty.
        </div>
    }
</div>

@if (Model.TotalRows > 0 && Model.TotalColumns > 0)
{
    <hr />

    <div class="row mt-1">
        <div class="col-xs-12 col-lg-2 container">
            <div class="row h-100">
                <h3 class="mt-1 col-6 col-lg-12">
                    Specimens
                </h3>

                @*Legend*@
                <div class="col-4 col-md-3 col-lg-10 offset-2 offset-md-3 mt-auto">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Pollen Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="table-danger">
                                    Sterile
                                </td>
                            </tr>
                            <tr>
                                <td class="table-warning">
                                    Medium
                                </td>
                            </tr>
                            <tr>
                                <td class="table-success">
                                    Abundant
                                </td>
                            </tr>
                            <tr>
                                <td class="table-secondary">
                                    Unknown
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


        <div class="col-xs-12 col-lg-10">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="bg-light p-1">
                            <p class="mb-0 d-flex justify-content-end">
                                Column
                            </p>
                            <p class="mb-0">
                                Row
                            </p>
                        </th>
                        @for (int col = 1; col <= Model.TotalColumns; col++)
                        {
                            <th scope="col" class="text-center align-top bg-light">@col</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (int row = 1; row <= Model.TotalRows; row++)
                    {
                        <tr>
                            <th scope="row" class="col-1 bg-light">
                                @row
                            </th>

                            @for (int col = 1; col <= Model.TotalColumns; col++)
                            {
                                @if (Model.Specimens[row - 1, col - 1] != null)
                                {
                                    <td class="col-1 text-center align-middle p-1 @Model.Specimens[row - 1,col - 1].BackgroundColor">
                                        <a asp-controller="Specimen" asp-action="Details" asp-route-id="@Model.Specimens[row - 1,col - 1].SpecimenId"
                                           class="text-decoration-none text-dark fw-bold">
                                            @Model.Specimens[row - 1,col - 1].Name
                                        </a>
                                        <br>
                                        <small>@Model.Specimens[row - 1,col - 1].Year</small>
                                    </td>
                                }
                                else
                                {
                                    <td class="col-1 align-middle">
                                        <div class="d-flex justify-content-center m-2">
                                            -
                                        </div>
                                    </td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}