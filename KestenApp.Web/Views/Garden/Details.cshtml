@using KestenApp.Web.ViewModels.Garden;
@model GardenDetailsModel

@{
    ViewData["Title"] = @Model.GardenName;
}

@*Header*@
<div class="row">

    <div class="col-10 offset-lg-1">
        @*Garden Name*@
        <h2 class="fw-bold mb-2">
            Garden: @Model.GardenName
        </h2>

        @*Buttons*@
