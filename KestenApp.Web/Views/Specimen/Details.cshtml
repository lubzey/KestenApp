@using KestenApp.Web.ViewModels.Specimen;
@using System.Globalization;
@model SpecimenDetailsModel

@{
    ViewData["Title"] = $"Specimen: {Model.SpecimenName}";
}

@*Header*@
<div class="row">

    <div class="col-10 col-xl-8 offset-xl-3">
        @*Specimen Name*@
        <h2 class="fw-bold mb-2">
            Specimen: @Model.SpecimenName
        </h2>

        @*Buttons*@
        <a asp-controller="Specimen"
           asp-action="Edit"
           asp-route-id="@Model.SpecimenId"
           class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
            </svg>
            <span>Edit</span>
        </a>
        <a asp-controller="Specimen"
           asp-action="Archive"
           asp-route-id="@Model.SpecimenId"
           hidden="@Model.HideArchiveButton"
           class="btn btn-outline-danger">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
            </svg>
            <span>Archive</span>
        </a>
        <a asp-controller="Specimen"
           asp-action="Restore"
           asp-route-id="@Model.SpecimenId"
           hidden="@Model.HideRestoreButton"
           class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z" />
            </svg>
            <span>Restore</span>
        </a>
    </div>

    <div class="col-2 col-lg-1">
        <div class="row no-gutters">
            <a asp-controller="Specimen"
               asp-action="List"
               class="btn mr-1 btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"></path>
                </svg>
                <span>Back</span>
            </a>
        </div>

    </div>
</div>

@*Variety*@
@if (Model.Variety != null)
{
    <div class="row mt-1">
        <div class="col-12 col-lg-11 offset-lg-1">
            <div class="row mt-1">
                <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                    Variety
                </div>

                <div class="col-8 mb-2">
                    <a asp-controller="Variety" asp-action="Details" asp-route-id="@Model.Variety.VarietyId"
                       class="text-decoration-none text-dark">@Model.Variety.Name</a>
                </div>
            </div>
        </div>
    </div>
}

@*Garden*@
<div class="row mt-1">
    <div class="col-12 col-lg-11 offset-lg-1">
        <div class="row mt-1">
            <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                Garden
            </div>

            <div class="col-8 mb-2">
                <a asp-controller="Garden" asp-action="Details" asp-route-id="@Model.Garden.GardenId"
                   class="text-decoration-none text-dark">@Model.Garden.Name</a>
            </div>
        </div>
    </div>
</div>

@*Position*@
<div class="row mt-1">
    <div class="col-12 col-lg-11 offset-lg-1">
        <div class="row mt-1">
            <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                Row
            </div>

            <div class="col-8 mb-2">
                @Model.Row
            </div>
        </div>
    </div>
</div>

<div class="row mt-1">
    <div class="col-12 col-lg-11 offset-lg-1">
        <div class="row mt-1">
            <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                Column
            </div>

            <div class="col-8 mb-2">
                @Model.Column
            </div>
        </div>
    </div>
</div>

@*Elevation*@
<div class="row mt-1">
    <div class="col-12 col-lg-11 offset-lg-1">
        <div class="row mt-1">
            <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                Elevation
            </div>

            <div class="col-8 mb-2">
                @Model.Elevation m
            </div>
        </div>
    </div>
</div>

@*Dates*@
@if (Model.PlantedOnDate != null)
{
    <div class="row mt-1">
        <div class="col-12 col-lg-11 offset-lg-1">
            <div class="row mt-1">
                <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                    Planted On
                </div>

                <div class="col-8 mb-2">
                    @Model.PlantedOnDate.Value.ToString("MMMM yyyy", CultureInfo.InvariantCulture)
                </div>
            </div>
        </div>
    </div>
}

@if (Model.SowedOnDate != null)
{
    <div class="row mt-1">
        <div class="col-12 col-lg-11 offset-lg-1">
            <div class="row mt-1">
                <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                    Sowed On
                </div>

                <div class="col-8 mb-2">
                    @Model.SowedOnDate.Value.ToString("MMMM yyyy", CultureInfo.InvariantCulture)
                </div>
            </div>
        </div>
    </div>
}

@if (Model.GraftedOnDate != null)
{
    <div class="row mt-1">
        <div class="col-12 col-lg-11 offset-lg-1">
            <div class="row mt-1">
                <div class="col-4 col-lg-3 text-lg-end fw-bold mb-2">
                    Grafted On
                </div>

                <div class="col-8 mb-2">
                    @Model.GraftedOnDate.Value.ToString("MMMM yyyy", CultureInfo.InvariantCulture)
                </div>
            </div>
        </div>
    </div>
}
