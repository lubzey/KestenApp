        </div>

        <div class="row">
            <div class="col-3 text-end">
                <p class="fw-bold">
                    Maturity Period
                </p>
            </div>
            <div class="col-5">
                @Model.Variety.MaturityPeriod
            </div>
        </div>
    </div>
</div>