@model KestenApp.Models.Varieties.VarietyDetailsViewModel;

@{
    ViewData["Title"] = Model.Variety.VarietyName;
}

@*Photo and Description*@
<div class="row">

    @*Photo*@
    <div class="col-4 offset-1">
        <img alt=""
             class="img-fluid"
             src=@Model.ThumbnailImagePath />
    </div>

    @*Name, Description, Buttons*@
    <div class="col-6">
        <div class="row">
            <div class="col">
                <h2>
                    @Model.Variety.VarietyName
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col">
                @Model.Variety.Description
            </div>
        </div>
        <div class="col mt-3">
            <a asp-controller="Variety"
               asp-action="AddOrEdit"
               asp-route-id="@Model.Variety.VarietyId"
               class="btn btn-outline-success">
                <span>Edit</span>
            </a>
            <a asp-controller="Variety"
               asp-action="Delete"
               class="btn btn-outline-danger">
                <span>Delete</span>
            </a>
        </div>
    </div>

    @*Back button*@
    <div class="col-1 text-end">
        <a asp-controller="Variety"
           asp-action="List"
           class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"></path>
            </svg>
            <span>Back</span>
        </a>
    </div>

</div>
<hr />

@*Tree*@
<div class="row mt-1">
    <div class="col-1">
        <h3 class="mt-1">
            Tree
        </h3>
    </div>

    <div class="col-11">

        @*Species*@
        <div class="row mt-1">
            <div class="col-3 text-end">
                <p class="fw-bold">
                    Species
                </p>
            </div>
            <div class="col-5 mb-2">
                <div class="row">
                    @for (int index = 0; index < Model.SpeciesCheckboxes.Count; index++)
                    {
                        <div class="col-3">
                            <input type="checkbox"
                               asp-for="@Model.SpeciesCheckboxes[index].IsChecked"
                                   class="form-check-input"
                                   style="pointer-events:none" />

                            <label class="form-check-label">
                                @Model.SpeciesCheckboxes[index].LabelName
                            </label>

                            <input type="hidden" asp-for="@Model.SpeciesCheckboxes[index].Id" />
                            <input type="hidden" asp-for="@Model.SpeciesCheckboxes[index].LabelName" />
                            <br />
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-3 text-end">
                <p class="fw-bold">
                    Pollen
                </p>
            </div>
            <div class="col-5">
                @Model.Variety.PollenType
            </div>
        </div>

        @*Vigor*@
        <div class="row">
            <div class="col-3 text-end">
                <p class="fw-bold">
                    Vigor
                </p>
            </div>
            <div class="col-5">
                TODO: Add
            </div>
        </div>

        <div class="row">
            <div class="col-3 text-end">
                <p class="fw-bold">
                    Erect
                </p>
            </div>
            <div class="col-5">
                TODO: Add
            </div>
        </div>

        <div class="row">
            <div class="col-3 text-end">
                <p class="fw-bold">
                    Blight Resistance
                </p>
            </div>
            <div class="col-5">
                @Model.Variety.ChestnutBlightResistance
            </div>
        </div>

        <div class="row">
            <div class="col-3 text-end">
                <p class="fw-bold">
                    Ink Disease Resistance
                </p>
            </div>
            <div class="col-5">
                @Model.Variety.InkDiseaseResistance
            </div>
        </div>

    </div>
</div>

<hr />

@*Fruit*@
<div class="row mt-1">
    <div class="col-1">
