@model VarietyFormModel
@{
    ViewBag.Title = "Add Variety";
}
@Html.AntiForgeryToken()

@*Header*@
<div class="row">
    <div class="col">
        <h2 class="text-start">@ViewBag.Title</h2>
    </div>

    <div class="col text-end">
        <a asp-controller="Variety"
           asp-action="List"
           class="btn btn-outline-secondary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"></path>
            </svg>
            <span>Back</span>
        </a>
    </div>
</div>
<hr />

@*Photo and Description*@
<form asp-action="Form" method="post">
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col-3">
                    <label asp-for="@Model.VarietyName" class="form-label fw-bold">Variety Name</label>
                </div>
                <div class="col-9">
                    <input asp-for="@Model.VarietyName" class="form-control" aria-required="true" />
                    <small>
                        <span asp-validation-for="@Model.VarietyName" class="text-danger" />
                    </small>
                </div>
            </div>
        </div>

        <div class="col-2 offset-1">
            TODO: Add image
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-6">
            <div class="row">
                <div class="col-3">
                    <label asp-for="@Model.Description" class="form-label fw-bold">Description</label>
                </div>
                <div class="col-9">
                    <textarea asp-for="@Model.Description" class="form-control" aria-required="true"></textarea>
                    <small>
                        <span asp-validation-for="@Model.Description" class="text-danger" />
                    </small>
                </div>
            </div>
        </div>
    </div>

    <hr />

    @*Tree*@
    <div class="row mt-1">
        <div class="col-1">
            <h3 class="mt-1">
                Tree
            </h3>
        </div>

        <div class="col-11">

            @*Species*@
            <div class="row mt-1">
                <div class="col-3 text-end">
                    <label class="form-label fw-bold">Species</label>
                </div>
                <div class="col-5 mb-2">
                    <div class="row">
                        @for (int index = 0; index < Model.SpeciesCheckboxes.Count; index++)
                        {
                            <div class="col-3">
                                <input type="checkbox"
                                   asp-for="@Model.SpeciesCheckboxes[index].IsChecked"
                                       class="form-check-input" />

                                <label class="form-check-label">
                                    @Model.SpeciesCheckboxes[index].LabelName
                                </label>

                                <input type="hidden" asp-for="@Model.SpeciesCheckboxes[index].Id" />
                                <input type="hidden" asp-for="@Model.SpeciesCheckboxes[index].LabelName" />
                                <br />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-3 text-end">
                    <label asp-for="@Model.PollenType" class="form-label fw-bold">Pollen</label>
                </div>
                <div class="col-5">
                    <select asp-for="@Model.PollenType" class="form-control">
                        @foreach (SelectListItem pollenType in Model.PollenOptions)
                        {
                            <option value="@(pollenType.Value)">@pollenType.Text</option>
                        }
                    </select>
                    @*<span asp-validation-for="@Model.CategoryId" class="text-danger"></span>*@
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="mt-3">
        <input class="btn btn-outline-secondary" type="submit" value="Create" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
