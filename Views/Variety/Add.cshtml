@using KestenTestApp.Models.Data;
@model VarietyAddViewModel
@{
    ViewBag.Title = "Add Variety";
}
@Html.AntiForgeryToken()

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.VarietyName" class="form-label">Variety Name</label>
                <input asp-for="@Model.VarietyName" class="form-control" aria-required="true" />
                <small>
                    <span asp-validation-for="@Model.VarietyName" class="text-danger " />
                </small>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description</label>
                <input asp-for="@Model.Description" class="form-control" aria-required="true" />
                <small>
                    <span asp-validation-for="@Model.Description" class="text-danger" />
                </small>
            </div>

            <span>Species:</span>
            <br />
            @for (int index = 0; index < Model.Species.Count; index++)
            {
                <input type="checkbox" asp-for="@Model.Species[index].IsChecked" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.Species[index].IsChecked">
                    @Model.Species[index].LabelName
                </label>
                <input type="hidden" asp-for="@Model.Species[index].Id" />
                <input type="hidden" asp-for="@Model.Species[index].LabelName" />
                <br />
            }

            <div class="mt-3">
                <input class="btn btn-outline-secondary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}