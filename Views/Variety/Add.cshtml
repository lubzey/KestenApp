                    <div class="input-group-text">
                        <input type="checkbox" aria-label="Checkbox for following text input">
                    </div>
                </div>
            </div>

            <select class="select w-100 p-3" multiple>
                @foreach (Species sp in Model.Species)
                {
                    <option value="@sp.SpeciesId">@sp.ShortLatinName</option>
                }
            </select>
            <label class="form-label select-label">Species</label>*@


            <div class="mb-3">
                <input class="btn btn-outline-secondary" type="submit" value="Add" />
